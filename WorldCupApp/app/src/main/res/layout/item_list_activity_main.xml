<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    >

    <ImageView
        android:id="@+id/iv_countryImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Just content Brah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_countryName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/app_name"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_countryImage"
        app:layout_constraintTop_toTopOf="@id/iv_countryImage"
        />

    <TextView
        android:id="@+id/tv_countryWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/tv_countryName"
        app:layout_constraintTop_toBottomOf="@+id/tv_countryName" />




</androidx.constraintlayout.widget.ConstraintLayout>